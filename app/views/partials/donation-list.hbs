<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <table class="uk-table">
    <caption>
      Guests added so far
    </caption>
    <thead>
      <th>First Name</th>
      <th>Surname</th>
      <th>Email</th>
    </thead>
    <tbody class="uk-text-left">
    {{#each donations}}
      <tr>
        <td> {{amount}} </td>
        <td> {{method}} </td>
        <td> {{donor.firstName}} {{donor.lastName}} </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
